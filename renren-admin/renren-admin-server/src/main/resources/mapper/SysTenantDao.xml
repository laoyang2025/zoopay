<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.SysTenantDao">

    <select id="getList" resultType="io.renren.entity.SysTenantEntity">
        select * from sys_tenant  where del_flag = 0
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="tenantName != null and tenantName.trim() != ''">
            and tenant_name like #{tenantName}
        </if>

    </select>

    <select id="getById" resultType="io.renren.entity.SysTenantEntity">
        select * from sys_tenant where del_flag = 0 and id = #{value}
    </select>

    <update id="deleteBatch">
        update sys_tenant set del_flag = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>